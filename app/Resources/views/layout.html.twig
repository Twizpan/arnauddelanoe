<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="utf-8" />

        <link rel="icon" href="{{ asset('favicon.ico') }}" />        
        <link rel="apple-touch-icon" href="{{ asset('apple-touch-icon.png') }}" />

        <title>
            {% block head_title %}Arnaud{% endblock %}
        </title>

        <link rel="stylesheet" href="{{ asset('css/normalize.css') }}" type="text/css" />

        {% block head_style %}{% endblock %}

        <script src="{{ asset('js/less-1.3.1.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/jquery-1.8.2.min.js') }}" type="text/javascript"></script>
    </head>

    <body>

        <header>
            <h1 itemscope itemtype="http://data-vocabulary.org/Person">
                <a href="{{ path('arnaud_main_index') }}">
                    <span itemprop="givenName">Arnaud</span>
                    <span itemprop="famillyName">DELANOË</span>
                </a>
            </h1>
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <a class="logout" href="{{ path('fos_user_security_logout') }}" title="Se déconnecter">{{app.user.username}}</a>
            {% else %}
                <a class="login" href="{{ path('fos_user_security_login') }}" title="Se connecter"></a>
            {% endif %}
        </header>

        <nav>
            
            <ul>
                <li>
                    <a href="{{ path('arnaud_main_index') }}" title="Accueil" {% block menu_index_class %}{% endblock %}>/</a>
                </li>
                <li>
                    <a href="{{ path('arnaud_cv_index') }}" title="Curriculum vitæ" {% block menu_cv_class %}{% endblock %}>/cv</a>
                </li>
            </ul>
        </nav>

        <section>
            <h2>{% block content_title %}{% endblock %}</h2>
            {% block content %}{% endblock %}
        </section>

    </body>
</html>